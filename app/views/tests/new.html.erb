
<%= "Teacher id is #{@teacher.id}" %> 
<%= "Test is #{@test.inspect}" %>


<%= form_for [@teacher, @test] do |f| %>
  <!-- new tests will be created from the teachers show site -->
  <%= f.label :test_name, "Give your test a name" %> 
  <%= f.text_field :test_name %> 
  <br/>
  <br/>
  
  <% @questions.each do |question| %> 
    <%= f.label :question, question.content %> 
    <%= f.check_box(:questions, {:multiple => true, checked: false}, question.id, false) %> 
    <br/>
  <% end %> 

  <%= f.submit "Submit" %> 

<% end %>  

<br/>